@article{highamRiseFallPoliticians1992,
  title = {The {{Rise}} and {{Fall}} of {{Politicians}}: The {{Judged Heights}} of {{Broadbent}}, {{Mulroney}} and {{Turner Before}} and {{After}} the 1988 {{Canadian Federal Election}}},
  shorttitle = {The {{Rise}} and {{Fall}} of {{Politicians}}},
  author = {Higham, Philip and Carment, D.},
  year = {1992},
  month = jul,
  journal = {Canadian Journal of Behavioural Science/Revue canadienne des sciences du comportement},
  volume = {24},
  pages = {404--409},
  doi = {10.1037/h0078723},
  abstract = {Investigated the relationship between perceived status in politics and judged physical stature. 177 Ss were interviewed. Comparison of estimated heights of Canadian federal party leaders before and after the 1988 federal election indicated that the losers, Broadbent and Turner, were judged to be shorter afterwards, while the winner, Mulroney, was judged taller. Although the relationship between status and judged height has previously been demonstrated, this result indicates that it is dynamic (i.e., election outcomes alter rated tallness). A gender effect also was noted. (French abstract) (PsycINFO Database Record (c) 2012 APA, all rights reserved)}
}

